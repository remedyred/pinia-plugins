{
	"name": "@snickbit/pinia-plugin-loading",
	"version": "1.0.11",
	"description": "Pinia plugin to track loading state of all asynchronous actions",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"clean": "shx rm -rf dist",
		"depcheck": "depcheck",
		"dev": "pnpm run build --sourcemap",
		"prod": "pnpm run build --minify",
		"test": "jest",
		"watch": "pnpm run dev --watch"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/utilities": "^3.0.17",
		"vue": "^3.2.33"
	},
	"devDependencies": {
		"jest": "^27.4.7",
		"ts-jest": "^27.1.4",
		"tsup": "^5.12.7",
		"typescript": "^4.6.3"
	},
	"engines": {
		"node": ">= 12"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"dts": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
