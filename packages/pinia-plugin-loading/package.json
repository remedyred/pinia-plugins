{
	"name": "@snickbit/pinia-plugin-loading",
	"version": "1.0.30",
	"description": "Pinia plugin to track loading state of all asynchronous actions",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup --minify --dts",
		"clean": "shx rm -rf ./dist ./.types",
		"depcheck": "depcheck",
		"dev": "tsup",
		"docs": "typedoc src/index.ts --tsconfig ./tsconfig.typedoc.json",
		"release": "pnpm dlx semantic-release",
		"watch": "pnpm run dev --watch"
	},
	"release": {
		"extends": [
			"semantic-release-monorepo",
			"@snickbit/semantic-release"
		]
	},
	"dependencies": {
		"@snickbit/utilities": "^3.2.0",
		"vue": "^3.2.37"
	},
	"devDependencies": {
		"tsup": "6.6.0",
		"typedoc": "0.23.25",
		"typedoc-plugin-markdown": "3.13.6",
		"typescript": "4.9.5"
	},
	"engines": {
		"node": ">= 12"
	}
}
