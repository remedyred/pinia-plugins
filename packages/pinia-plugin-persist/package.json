{
	"name": "@snickbit/pinia-plugin-persist",
	"version": "1.0.19",
	"description": "Pinia plugin to persist state using LocalForage",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup",
		"clean": "shx rm -rf dist",
		"depcheck": "depcheck",
		"dev": "pnpm run build --sourcemap",
		"prod": "pnpm run build --minify",
		"test": "jest",
		"watch": "pnpm run dev --watch"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/utilities": "^3.0.27",
		"localforage": "^1.10.0",
		"pinia": "^2.0.14"
	},
	"devDependencies": {
		"jest": "^28.1.1",
		"ts-jest": "^28.0.4",
		"tsup": "^6.1.2",
		"typescript": "^4.7.3",
		"vue": "^3.2.37"
	},
	"engines": {
		"node": ">= 12"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"dts": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
