{
	"name": "@snickbit/pinia-plugin-persist",
	"version": "1.0.22",
	"description": "Pinia plugin to persist state using LocalForage",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup --minify --dts",
		"clean": "shx rm -rf ./dist ./.types",
		"depcheck": "depcheck",
		"dev": "tsup",
		"docs": "typedoc src/index.ts --tsconfig ./tsconfig.typedoc.json",
		"release": "semantic-release",
		"test": "jest",
		"watch": "pnpm run dev --watch"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"dependencies": {
		"@snickbit/utilities": "^3.2.0",
		"localforage": "^1.10.0",
		"pinia": "^2.0.14"
	},
	"devDependencies": {
		"jest": "28.1.3",
		"ts-jest": "28.0.8",
		"tsup": "6.2.3",
		"typescript": "4.8.2",
		"vue": "3.2.38"
	},
	"engines": {
		"node": ">= 12"
	}
}
