{
	"name": "root",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"build": "turbo run build",
		"clean": "pnpm run clean:builds && pnpm run clean:modules",
		"clean:builds": "turbo run clean",
		"clean:modules": "shx rm -rf **/node_modules",
		"dev": "turbo run dev",
		"fix": "eslint **/*.{ts,json} --cache --color --fix",
		"index": "turbo run index",
		"lint": "eslint **/*.{ts,json} --cache --color",
		"readmes": "readmes",
		"prerelease": "turbo run prod test fix depcheck readmes",
		"release": "pnpm run prerelease && lerna publish",
		"test": "pnpm jest"
	},
	"jest": {
		"noStackTrace": true,
		"passWithNoTests": true,
		"preset": "ts-jest",
		"silent": true,
		"testEnvironment": "node"
	},
	"devDependencies": {
		"@lerna-lite/cli": "^1.6.0",
		"@snickbit/readmes": "^0.0.2",
		"@types/jest": "^27.5.2",
		"@typescript-eslint/eslint-plugin": "^5.30.5",
		"@typescript-eslint/parser": "^5.30.5",
		"depcheck": "^1.4.3",
		"esbuild": "0.15.1",
		"eslint": "^8.19.0",
		"eslint-plugin-beautiful-sort": "^2.0.3",
		"eslint-plugin-json": "^3.1.0",
		"eslint-plugin-json-files": "^1.3.0",
		"eslint-plugin-sort-class-members": "^1.14.1",
		"eslint-plugin-vue": "^9.1.1",
		"jest": "^27.5.1",
		"shx": "^0.3.4",
		"sort-package-json": "^1.57.0",
		"ts-jest": "^27.1.5",
		"turbo": "^1.3.1",
		"typescript": "^4.7.4"
	},
	"engines": {
		"node": ">= 12"
	},
	"readmes": {
		"repo": "snickbit/pinia-plugins"
	}
}
