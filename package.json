{
	"name": "root",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"check": "turbo run build //#lint //#test",
		"clean": "pnpm run clean:builds && pnpm run clean:modules",
		"clean:builds": "turbo run clean",
		"clean:modules": "shx rm -rf **/node_modules",
		"depcheck": "turbo run depcheck",
		"dev": "turbo run dev",
		"docs": "readmes",
		"fix": "eslint \"**/*.{ts,json,yml,yaml}\" --cache --color --fix",
		"lint": "eslint \"**/*.{ts,json,yml,yaml}\" --cache --color",
		"prerelease": "turbo run build docs ///#fix ///#test depcheck",
		"release": "turbo run release",
		"release:ci": "turbo run release --concurrency=1",
		"test": "jest"
	},
	"jest": {
		"noStackTrace": true,
		"passWithNoTests": true,
		"preset": "ts-jest",
		"silent": true,
		"testEnvironment": "node"
	},
	"devDependencies": {
		"@lerna-lite/cli": "1.11.2",
		"@snickbit/eslint-config": "1.3.2",
		"@snickbit/readmes": "0.0.2",
		"@types/jest": "28.1.8",
		"depcheck": "1.4.3",
		"esbuild": "0.15.5",
		"eslint": "8.22.0",
		"jest": "28.1.3",
		"shx": "0.3.4",
		"ts-jest": "28.0.8",
		"turbo": "1.4.3",
		"typescript": "4.8.2"
	},
	"engines": {
		"node": ">= 12"
	},
	"readmes": {
		"repo": "snickbit/pinia-plugins"
	}
}
